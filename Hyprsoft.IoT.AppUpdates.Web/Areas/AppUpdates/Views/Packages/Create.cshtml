@model Package

@{
    ViewData["Title"] = "Add Package";
}

<h3>@ViewData["Title"]</h3>
<div class="card mt-3">
    <div class="card-body">
        <h4 class="card-title"><i class="fas fa-cube"></i> @Model.Application.Name</h4>
        <hr />
        <form asp-action="Create" method="post" class="form-horizontal" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Id"></label>*
                    <div class="input-group mb-3">
                        <input asp-for="Id" class="form-control" readonly />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary copy" type="button" data-clipboard-text="@Model.Id" onclick="page.showCopied()" title="Copy to clipboard"><i class="fas fa-copy"></i></button>
                        </div>
                    </div>
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="FileVersion"></label>*
                    <input asp-for="FileVersion" class="form-control" placeholder="Ex: 1.0.2.0" />
                    <span asp-validation-for="FileVersion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ReleaseDateUtc"></label>*
                    <input asp-for="ReleaseDateUtc" class="form-control" />
                    <span asp-validation-for="ReleaseDateUtc" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Checksum"></label>*
                    <input asp-for="Checksum" class="form-control" value="[will be calculated]" readonly />
                    <span asp-validation-for="Checksum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="SourceUri"></label>*
                    <input asp-for="SourceUri" class="form-control" value="[will be calculated]" readonly />
                    <span asp-validation-for="SourceUri" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label>Zip File</label>*
                    <input type="file" class="form-control-file" id="zipfile" name="zipfile" data-val="true" data-val-required="The Zip File field is required." />
                    <small class="text-muted">Maximum zip file size is 50MB.</small>
                    <span class="text-danger field-validation-valid" data-valmsg-for="zipfile" data-valmsg-replace="true"></span>
                </div>
            </div>
            <div class="custom-control custom-switch">
                <input asp-for="IsAvailable" type="checkbox" class="custom-control-input">
                <label asp-for="IsAvailable" class="custom-control-label"></label>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Add</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
        </form>
    </div>
</div>

<div class="my-3">
    <a asp-action="List" asp-controller="Apps">&laquo; Back to Apps</a>
</div>

